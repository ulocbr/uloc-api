<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity table="person_contact_extra" name="Uloc\ApiBundle\Entity\Person\ContactExtra" repository-class="Uloc\ApiBundle\Repository\Person\ContactExtraRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" length="100"/>

        <field name="tag" type="string" length="20" nullable="true"/>

        <field name="value" type="text"/>

        <many-to-one field="purpose" target-entity="Uloc\ApiBundle\Entity\Person\TypeContactExtraPurpose" inversed-by="contacts">
            <join-column name="type_purpose_id" referenced-column-name="id"/>
        </many-to-one>

        <many-to-one field="person" target-entity="Uloc\ApiBundle\Entity\Person\Person" inversed-by="contactExtra">
            <join-column name="person_id" referenced-column-name="id"/>
        </many-to-one>

    </entity>

</doctrine-mapping>
